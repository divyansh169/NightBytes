<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.citymart.app.CustomerFoodPanel.OrderDish">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_gravity="top"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/food_name"
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:maxWidth="300dp"
                        android:text="Product Name"
                        android:textColor="@color/Blacklogo"
                        android:textSize="27dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="right">

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/number_btn"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            app:backGroundColor="#DC143C"
                            app:backgroundDrawable="@drawable/elegant_btnshape" />

                        <TextView
                            android:id="@+id/oostext"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="out of stock!"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            android:textSize="17dp"
                            android:textColor="@color/red_app">

                        </TextView>

                        <TextView
                            android:id="@+id/grptext"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="Group ordering is on!"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            android:textSize="14dp"
                            android:textColor="@color/green">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/chef_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Seller Name"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:text="Call: "
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/chef_mob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="phone"
                            android:linksClickable="true"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/darkgray"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/chef_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Seller Location"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Product Quantity"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Product Price"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Product Description"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="10dp"
                        android:text="Product Status"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:padding="10dp"
                        android:text="Stock Count"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
